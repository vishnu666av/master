<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/space_m"
    android:layout_marginTop="@dimen/space_m"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_m"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/imgBook"
            android:layout_width="@dimen/book_image_width"
            android:layout_height="@dimen/book_image_height"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="Description" />

        <TextView
            android:id="@+id/tvRank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_m"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="16sp"
            android:fontFamily="@font/robotolight"
            tools:text="#1"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:paddingLeft="@dimen/padding_m"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            app:layout_constraintTop_toBottomOf="@id/tvRank"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/robotolight"
            tools:text="Book Title"/>

        <TextView
            android:id="@+id/tvAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:paddingLeft="@dimen/padding_m"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/robotolight"
            tools:text="XYZ author"/>

        <TextView
            android:id="@+id/tvPublisher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/padding_m"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            app:layout_constraintTop_toBottomOf="@id/tvAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            android:fontFamily="@font/robotolight"
            tools:text="XYZ publisher"/>

        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:maxLines="5"
            android:paddingTop="@dimen/space_s"
            android:paddingLeft="@dimen/padding_m"
            app:layout_constraintTop_toBottomOf="@id/tvPublisher"
            app:layout_constraintStart_toEndOf="@id/imgBook"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/roboto_medium"
            tools:text="Book Description"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>