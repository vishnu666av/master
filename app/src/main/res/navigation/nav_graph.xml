<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bookListFragment">

<!-- Book List FRagment   -->
    <fragment
        android:id="@+id/bookListFragment"
        android:name="com.example.otchallenge.view.BookListFragment"
        android:label="Books"
        tools:layout="@layout/fragment_book_list">
        <action
            android:id="@+id/action_bookListFragment_toBookDetailFragment"
            app:destination="@id/bookDetailFragment"
            app:popUpTo="@id/bookListFragment"
            app:popUpToInclusive="false"/>

    </fragment>

<!-- Book Detail Fragment   -->

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.otchallenge.view.BookDetailFragment"
        android:label="Book Details"
        tools:layout="@layout/fragment_book_detail">
        <argument
            android:name="bookId"
            app:argType="integer"/>

    </fragment>


</navigation>